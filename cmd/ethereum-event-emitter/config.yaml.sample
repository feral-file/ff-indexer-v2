# Feral File Indexer Ethereum Event Emitter Configuration

debug: true
sentry_dsn: ""

database:
  host: localhost
  port: 5432
  user: postgres
  password: postgres
  dbname: ff_indexer
  sslmode: disable

nats:
  url: nats://localhost:4222
  stream_name: BLOCKCHAIN_EVENTS
  max_reconnects: 10
  reconnect_wait: 2s
  connection_name: ethereum-event-emitter

ethereum:
  websocket_url: ""
  chain_id: eip155:1
  start_block: 0

worker:
  pool_size: 20
  queue_size: 1024

